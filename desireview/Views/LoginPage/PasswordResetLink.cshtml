@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/AngularJS/password-link-page.js" type="text/javascript"></script>
    }

<div ng-controller="passwordResetLinkController">
    <div class="form-controls">
        <form ng-submit="changepassword()">
            <input type="text" placeholder="Enter New Password" class="form-control" /><br />
            <input type="text" placeholder="Confirm New Password" class="form-control" /><br />
            <button class="btn btn-success" type="submit">Change Password</button>
        </form>
    </div>
</div>